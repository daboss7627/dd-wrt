AT_SETUP([Backend Priorities])
AT_KEYWORDS([prio])
PT_CHECK(
[ListenHTTP
	Service
		Backend
			Address
			Port
			Priority 1
		End
		Backend
			Address
			Port
			Priority 8
		End
	End
End
],
[stats samples=1000 index=1 avg=8%25

GET /echo/foo
end

200
end
])

PT_CHECK(
[ListenHTTP
	Service
		Backend
			Address
			Port
		End
		Backend
			Address
			Port
			Priority 8
		End
	End
End
],
[# Default priority is 5, 8/5=1.6
stats samples=1000 index=1 avg=1.6%25

GET /echo/foo
end

200
end
])

AT_CLEANUP
